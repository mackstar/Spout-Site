<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}{% endblock %}</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

<div class="container" ng-app="spout">
<error-window></error-window>
  <div class="row header">
    <div class="col-md-3"><img src="/img/logo.png"></div>
    <div class="col-md-8 text-right">
      <div class="btn-group text-left">
          <div class="btn-group">
              <button type="button" class="btn btn-default dropdown-toggle  btn-default" data-toggle="dropdown">
                  <span class="glyphicon glyphicon-chevron-down"></span> Resources
              </button>
              <ul class="dropdown-menu">
                  <li>
                      <a ui-sref="resources({start:1})">List All</a>
                  </li>
                  <li>
                      <a ui-sref="resource-types">Resource Types</a>
                  </li>

              </ul>
          </div>
          <button type="button" class="btn btn-default" ui-sref="media">Media</button>
          <button type="button" class="btn btn-default" ui-sref="menus">Menus</button>
          <button type="button" class="btn btn-default" ui-sref="users">Users</button>
          <button type="button" class="btn btn-default" ui-sref="logout">Logout</button>
      </div>
    </div>
    <div class="col-md-1 text-right">
        <sp-loading-spinner />
    </div>
</div>
<section ui-view></section>
  {% block page %}{% endblock %}
</div>
<script src="/js/lib/lodash.underscore.min.js"></script>
<script src="/js/lib/angular.js"></script>
<script src="/js/lib/angular-route.min.js"></script>
<script src="/js/lib/angular-animate.min.js"></script>
<script src="/js/lib/angular-ui-router.min.js"></script>
<script src="/js/lib/restangular.min.js"></script>
<script src="/js/lib/ui-bootstrap-custom-tpls.min.js"></script>
<script src="/js/lib/autocomplete.js"></script>
<script src="/js/base.js"></script>
{% block js %}{% endblock %}
</body>
</html>
